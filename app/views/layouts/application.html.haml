!!! 5
%html
  %head
    %title Scrummer
    %link{ :rel => 'icon', :type => 'image/png', :href => '/images/Stickies.png' }
    = stylesheet_link_tag '/javascripts/jquery-ui/css/custom-theme/jquery-ui-1.7.2.custom.css', :media => :all
    = stylesheet_link_tag '/javascripts/jqplot/jquery.jqplot.css', :media => :all
    = stylesheet_link_tag 'application', :media => :all
    - if Rails.env.production?
      = javascript_include_tag 'jquery-ui/js/jquery-1.3.2.min', 'jquery-ui/js/jquery-ui-1.7.2.custom.min', 'jqplot/jquery.jqplot.min', 'showdown/compressed/showdown', 'application', :cache => true
    - else
      = javascript_include_tag 'jquery-ui/development-bundle/jquery-1.3.2', 'jquery-ui/development-bundle/ui/jquery-ui-1.7.2.custom', 'jqplot/jquery.jqplot', 'showdown/src/showdown', 'application', :cache => true
    = yield :head
  %body
    #page.ui-corner-all{ :class => "#{params[:controller]} #{params[:controller]}-#{params[:action]}" }
      #nav
        = link_to 'Home', root_path
        = link_to 'People', people_path
      = yield
