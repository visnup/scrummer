<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Type</th>
    <th>Body</th>
    <th>Done</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.person_id %></td>
    <td><%=h task.type %></td>
    <td><%=h task.body %></td>
    <td><%=h task.done %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>